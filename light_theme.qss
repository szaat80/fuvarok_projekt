QMainWindow {
    background-color: #ffffff; /* Fehér háttérszín */
}

QLabel {
    color: #000000; /* Fekete szöveg */
    font-size: 14px;
}

QPushButton {
    background-color: #ff4400; /* Narancssárga gomb */
    color: white;
    border: none;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    font-size: 14px;
    margin: 4px 2px;
    border-radius: 8px;
}

QPushButton:hover {
    background-color: #ff5511; /* Világosabb narancssárga gomb hover */
}
